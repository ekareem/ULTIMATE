<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pva_menu_notrunning_linearLayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pva_menu_notrunning_button_toggleVirtual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="virtual" />

    <ImageButton
        android:id="@+id/pva_menu_notrunning_button_undo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <ImageButton
        android:id="@+id/pva_menu_notrunning_button_redo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

    <ImageButton
        android:id="@+id/pva_menu_notrunning_button_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_save_24" />
</LinearLayout>